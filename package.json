{
  "name": "upfirst",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"cd backend && yarn start:dev\" \"cd frontend && yarn dev\"",
    "clean": "rm -rf node_modules .yarn/cache && yarn cache clean --all",
    "start": "concurrently \"cd backend && yarn start:prod\" \"cd frontend && yarn start\"",
    "build": "concurrently \"yarn build:frontend\" \"yarn build:backend\"",
    "build:frontend": "cd frontend && yarn build",
    "build:backend": "cd backend && yarn build",
    "check": "tsc",
    "postinstall": "bash scripts/safe-postinstall.sh",
    "db:push": "cd backend && prisma db push --schema=./prisma/schema.prisma",
    "db:migrate": "cd backend && prisma migrate dev --schema=./prisma/schema.prisma",
    "db:studio": "cd backend && prisma studio --schema=./prisma/schema.prisma",
    "db:reset": "cd backend && prisma migrate reset --force --schema=./prisma/schema.prisma",
    "contracts:generate": "tsx scripts/generate-openapi-nestjs.ts && tsx scripts/generate-graphql-schema.ts",
    "contracts:diff": "yarn contracts:generate && tsx scripts/contract-diff.ts",
    "contracts:update-baseline": "yarn contracts:generate && mkdir -p contracts/baseline && cp contracts/openapi-nestjs.json contracts/baseline/ && cp contracts/graphql-schema.graphql contracts/baseline/"
  },
  "devDependencies": {
    "glob": "^11.0.3",
    "tsx": "^4.20.5",
    "typescript": "5.6.3"
  },
  "dependencies": {
    "concurrently": "^9.2.1"
  },
  "packageManager": "yarn@4.10.3"
}
